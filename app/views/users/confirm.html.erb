<h2>Sign Up Confirmation</h2>
<h3>Are you sure these values are correct?</h3>

<div class="row">
  <div class="col-md-8">
    <h4>Name: <%= @user.name %></h4>
    <h4>Email: <%= @user.email %></h4>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <%= button_to "Yes", { controller: "users", action: "create", params: params.permit! }, class: 'btn btn-success' %>
  </div>
  <div class="cold-md-4">
    <%= button_to "No", { controller: "users", action: "new" }, class: 'btn btn-danger', method: :get  %>
  </div>

</div>
