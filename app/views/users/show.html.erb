<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h2>Posts</h2>
    <% if user_has_zero_posts?(@user) %>
      <%= "#{@user.name} has not submitted any posts yet." %>
    <% else %>
      <%= render @user.posts %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h2>Comments</h2>
    <% if user_has_zero_comments?(@user) %>
      <%= "#{@user.name} has not submitted any comments yet." %>
    <% else %>
      <%= render @user.comments %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
  <h2> Favorited Posts</h2>
  <% if user_has_zero_favorites?(@user) %>
    <%= "#{@user.name} has not favorited any posts yet." %>
  <% else %>
    <%= render partial: 'users/favorite', locals: { user: @user } %>
  <% end %>
    </div>
  </div>
</div>
