<h4>Add a Comment</h4>

<%= form_for [post, comment] do |f| %>
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: 'Enter new comment' %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-default pull-right' %>
<% end %>
